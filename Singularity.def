Bootstrap: library
From: ubuntu:22.04

%files
    ./ /opt


%environment
    export LC_ALL=C
    export PATH=/opt/build:$PATH


%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        mpi-default-dev \
        cmake
    apt-get clean

    mkdir -p opt && cd opt
    mkdir -p build && cd build
    cmake ..
    cmake --build .
    mv matrix*.txt build

%runscript
  mpirun -n 2 /opt/build/main
  exec echo "$@"
    

%labels
    Author TerranaZechini