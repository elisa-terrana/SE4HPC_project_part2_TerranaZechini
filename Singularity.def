Bootstrap: library
From: ubuntu:22.04

%files
    ./ /opt


%environment
    export LC_ALL=C
    # export PATH=/opt:$PATH
    export SINGULARITY_BINDPATH=/opt/build:$SINGULARITY_BINDPATH


%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        mpi-default-dev \
        cmake
    apt-get clean

    mkdir -p opt && cd opt
    mkdir -p build && cd build
    cmake ..
    cmake --build .


%runscript
  # chmod +x ./opt/build/main
  mpirun -n 2 ./opt/build/main
  exec echo "$@"
    

%labels
    Author TerranaZechini