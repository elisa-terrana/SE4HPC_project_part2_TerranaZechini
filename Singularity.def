Bootstrap: library
From: ubuntu:22.04

%files
    ./ /opt


%environment
    export PATH=/opt:$PATH
    export SINGULARITY_BINDPATH=/opt/build


%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        mpi-default-dev \
        cmake
    apt-get clean

    mkdir -p opt && cd opt
    mkdir -p build && cd build
    cmake ..
    cmake --build .


%runscript
  cd opt/build
  mpirun -n 2 ./main
    

%labels
    Author TerranaZechini