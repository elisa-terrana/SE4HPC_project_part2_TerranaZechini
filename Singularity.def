Bootstrap: library
From: ubuntu:22.04

%files
    ./ /opt/


%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        mpi-default-dev \
        cmake
    apt-get clean

    mkdir -p opt && cd opt
    mkdir -p build && cd build
    cmake ..
    cmake --build .


%environment
    export PATH=/opt/:$PATH


