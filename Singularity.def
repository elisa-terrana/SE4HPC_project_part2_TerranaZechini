Bootstrap: library
From: ubuntu:22.04

%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        cmake \
        mpi-default-dev \
        g++
    apt-get clean

%environment
    export LC_ALL=C
    export PATH=/usr/local/bin:$PATH
    export LD_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/openmpi/lib:$LD_LIBRARY_PATH

%files
    build/main /build
    matrixA.txt /build
    matrixB.txt /build

%runscript
    mpirun -n 2 ./build/main
    
%labels
    Author TerranaZechini