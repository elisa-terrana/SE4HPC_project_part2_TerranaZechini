Bootstrap: library
From: ubuntu:22.04

%files
    ./build/main /bd/
    ./matrixA.txt /bd/
    ./matrixB.txt /bd/

%post
    apt-get update
    apt-get install -y build-essential \
        mpi-default-bin \
        cmake \
        mpi-default-dev 
    apt-get clean

%environment
    export PATH=/bd/:$PATH

%runscript
    cd /bd
    mpirun -n 2 ./main
    
